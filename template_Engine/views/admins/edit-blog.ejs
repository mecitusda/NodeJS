<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head',title=title) %>
    <link rel="stylesheet" href="/static/css/main.css">
    <script src="/static/js/alert-timeout.js"></script>
</head>
<body>
    
  <%- include('../partials/nav',{nav_items,who_active,main_Page}) %>

    <div class="container mt-3">
       
        <div class="row">
                    
            <div class="col-md-12 mt-3">
                <form method="POST">
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="baslik" name="baslik" value="<%= blog.title%>">
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-8">
                            <textarea name="aciklama" class="form-control" rows="10"><%= blog.explanation %></textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="resim" class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="resim" name="resim" value="<%= blog.picture %>">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="category" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-8">
                            <select name="category" id="category" class="form-select">
                                <%- include('../partials/options',{categories}) %>
                            </select>
                            <script>document.querySelector("#category").value ="<%=blog.id_category%>"</script>
                        </div>
                    </div>
                    

                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="home" name="home" <%=blog.home ? 'checked' :'' %>>
                            <label class="form-check-label" for="home">
                                home
                            </label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="verify" name="verify" <%=blog.verify ? 'checked' :'' %>>
                            <label class="form-check-label" for="verify">
                                verify
                            </label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isvisible" name="isvisible" <%=blog.isvisible ? 'checked' :'' %>>
                            <label class="form-check-label" for="isvisible">
                                isvisible
                            </label>
                          </div>
                        </div>
                      </div>

                      <button type="submit" class="btn btn-primary">create blog</button>
                      <% if (iscreated) { %>
                        <div class="alert alert-primary mt-3 " id="edit-blog-alert" role="alert">
                            Blog edited successfully
                          </div>
                      <% } %>
                      <% if (iscreated === false) { %>
                        <div class="alert alert-danger mt-3 " id="edit-blog-alert" role="alert">
                            Blog could not be edited
                          </div>
                      <% } %>
                          
                </form>


             </div>
                
                    
        </div>
    </div>

    
    
    
</body>
</html>