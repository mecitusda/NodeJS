<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <%- include('../partials/head',title="Role List") %>
    
</head>
<body>
    
    <!-- navigation -->
    <%- include('../partials/nav',{who_active,main_Page}) %>
  
    <div class="container mt-3">
        <div class="row">  
            <% if (message) { %>
            <div class="alert alert-<%=message.type%> mt-3 " id="edit-blog-alert" role="alert">
                <%= message.text %>
              </div>
          <% } %>
        </div>
        <div class="row">
            <div class="col-mb-12">
                <table class="table table-bordered table-striped">
                    
                    <thead>
                        <tr class="table-danger">
                            <td style="width: 50px;text-align: center;"><h5>id</h5></td>
                            <td ><h5>name</h5></td>
                            <td ><h5>User Count</h5></td>
                            <td style="width: 200px;text-align: center;"><h5>createdAt</h5></td>
                            <td style="width: 200px;text-align: center; "><h5>updatedAt</h5></td>
                            <td style="width: 145px;"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach( (element) => { %>
                        <tr >
                            <td>#<%=element.id%></td>
                            <td><%= element.rolename %></td>
                            <td> <%= element.user_count  %></td>
                            <td><%= element.createdAt %></td>
                            <td><%= element.updatedAt %></td>
                            <td class="align-content-center ">
                            <a href="/admin/role/edit/<%= element.id %>" class="btn btn-group-sm btn-primary">edit</a>
                            <a onclick="deletebuton('<%= element.id %>')" id="delete_button" class="btn btn-group-sm btn-danger">delete<a>
                            </td>
                           
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                
                  
            </div>
        </div>
    
    </div>


    
    <script>
    
        function deletebuton(id){
            if(id == null){
                return alert("Ä°nvalid Call!");
            }
           
            if(confirm("Are you sure to delete #"+id+" number of role?")){
               window.location.href = "/admin/role/delete/"+id;
            }
        }
        
        </script>


</body>
</html>