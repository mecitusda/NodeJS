<!DOCTYPE html>
<html lang="en"  data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/calculator.css">
    <script src="/static/js/calculator.js"></script>
    <title>Document</title>
</head>
<body>
    <h1 class="d-flex justify-content-center pt-5 pb-4 mb-5" id="shimmerWave">Calculator</h1>
    
    <div class="container" >
      
        <div class="row pb-5 pt-4"style="height: 125%;" >
            
            <input class="input" style="height: 100%;" name="input" id="input" type="text" readonly>
            <p class="text-bg-danger" id="message"></p>
        </div>
        <div class="row">
            <div class="child btn bg-body" id="AC">AC</div>
            <div class="child btn bg-body" id="DE">DE</div>
            <div class="child btn  bg-body" id="percent">%</div>
            <div class="child btn bg-body" id="slash">/</div>
        </div>

        <div class="row">
            <div class="child btn bg-body" id="seven">7</div>
            <div class="child btn bg-body" id="eight">8</div>
            <div class="child btn bg-body" id="nine">9</div>
            <div class="child btn bg-body" id="multiply">*</div>
        </div>  

        <div class="row">
            <div class="child btn bg-body" id="four">4</div>
            <div class="child btn bg-body" id="five">5</div>
            <div class="child btn bg-body" id="six">6</div>
            <div class="child btn bg-body" id="minus">-</div>
        </div>

        <div class="row" >
            <div class="child btn bg-body" id="one">1</div>
            <div class="child btn bg-body" id="two">2</div>
            <div class="child btn bg-body" id="three">3</div>
            <div class="child btn bg-body" id="plus">+</div>
        </div>


        <div class="row">
            
            <div class="child1 btn bg-body" id="point">.</div>
            <div class="child1 btn  bg-body" id="zero">0</div>
            <div class="child3 btn  bg-body" id="equals">=</div>
            
        </div>
    </div>

    <script>
    const target = document.getElementById('shimmerWave');

        function splitTextToSpans(targetElement) {
            if (targetElement) {
                const text = targetElement.textContent;
                targetElement.innerHTML = '';
                for (let character of text) {
                    const span = document.createElement('span');
                    if (character === ' ') {
                        span.innerHTML = '&nbsp;';
                    } else {
                        span.textContent = character;
                    }
                    targetElement.appendChild(span);
                }
            }
        }
        
        splitTextToSpans(target);
        </script>
</body>
</html>